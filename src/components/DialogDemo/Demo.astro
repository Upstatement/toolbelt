---
import { Icon } from "@astrojs/starlight/components";
import Demo from "@components/Demo.astro";
import code from "./code.html?raw";
---

<Demo
  name="dialog"
  features={[
    "Focus is automatically trapped in a modal",
    "Manages screen reader announcements with dialog title and description",
    "Clicking on overlay closes the modal",
    "Esc key closes the modal",
  ]}
  html={code}
>
  <div x-init x-dialog>
    <button
      class="bg-white rounded-md px-3 py-1 cursor-pointer transition-colors hover:bg-gray-50 shadow-md"
      x-dialog:trigger
    >
      Open Dialog
    </button>

    <template x-teleport="body">
      <div
        class="fixed inset-0 z-10 flex justify-center items-center shadow-md p-8"
        x-dialog:content
      >
        <div class="absolute inset-0 bg-black/30" x-dialog:overlay></div>

        <div
          class="bg-white relative rounded-md w-fit p-6 flex flex-col gap-4 max-w-[300px]"
        >
          <h2 x-dialog:title>Dialog</h2>

          <p x-dialog:description>
            The dialog is commonly used for alerts, menus, and interactive
            prompts.
          </p>

          <button
            class="w-fit bg-accent text-white rounded-md px-3 py-1 cursor-pointer hover:bg-accent-900 transition-colors"
            x-dialog:close
          >
            Close
          </button>
        </div>
      </div>
    </template>
  </div>
</Demo>
