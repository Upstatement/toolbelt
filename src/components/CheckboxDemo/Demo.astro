---
import Demo from "@components/Demo.astro";
import { Icon } from "@astrojs/starlight/components";
import code from "./code.html?raw";
---

<Demo name="checkbox" features={["Full keyboard navigation."]} html={code}>
  <div class="flex items-center gap-3" x-init x-checkbox.checked>
    <button
      class="bg-white aspect-square size-[1.6rem] rounded-md flex justify-center items-center group data-[state='checked']:bg-accent"
      x-checkbox:indicator
    >
      <Icon
        class="text-gray-200 shrink-0 group-data-[state='unchecked']:hidden"
        name="approve-check"
      />
    </button>
    <label x-checkbox:label>Accept terms and conditions</label>
  </div>
</Demo>
